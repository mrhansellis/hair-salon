@using HairSalon.Models;

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>Please add a stylist to get started.</h3>
}
else
{
<ul>
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.StylistName}", "Details" , new { id = stylist.StylistId })</li>
  }
  </ul>
  }

  <p>@Html.ActionLink("Add a Stylist", "Create")</p>
  <p>@Html.ActionLink("Return to Home", "Index", "Home")</p>